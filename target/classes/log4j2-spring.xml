<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Консольный аппендер -->
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1.} - %msg%n"
                    charset="UTF-8"/>
        </Console>

        <!-- Файловый аппендер с ротацией -->
        <RollingFile name="ROLLING"
                     fileName="logs/log4j2.log"
                     filePattern="logs/log4j2-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] %c{1.} - %msg%n"
                    charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Логируем только свой пакет -->
        <Logger name="com.stupor.zmr" level="debug" additivity="false">
            <AppenderRef ref="ROLLING"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <!-- Корневой логгер (только ошибки) -->
        <Root level="warn">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>


